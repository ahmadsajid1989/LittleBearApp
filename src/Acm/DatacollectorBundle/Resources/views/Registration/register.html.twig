{% extends 'base.html.twig' %}
{% block body %}
    <div class="login">
        <div class="container">
            <div class="row">
                <div class="col-sm-1 center-block">
                    <img src="{{ asset('images/logo-icon.png') }}" class="img-responsive"/>
                </div>

                <div class="col-sm-6 col-md-4 center-block  m-t-lg">
                    <div class="help-lead">
                        <h3>Add new user</h3>
                        <h4>Add a new user from here to access your application</h4>
                    </div>
                    {{ form_start(form) }}
                    <div class="form-group m-t-lg">
                        {{ form_row(form.username, {'attr' : { 'class' : 'form-control'}}) }}
                    </div>

                    <div class="form-group m-t-sm">
                        {{ form_row(form.email, {'attr' : { 'class' : 'form-control'}}) }}
                    </div>

                    <div class="form-group m-t-sm">
                        {{ form_row(form.plainPassword.first, {'attr' : { 'class' : 'form-control'}}) }}
                    </div>

                    <div class="form-group m-t-sm">
                        {{ form_row(form.plainPassword.second, {'attr' : { 'class' : 'form-control'}}) }}
                    </div>

                    <div class="form-group m-t-sm">
                        {{ form_row(form.userType, {'attr' : { 'class' : 'form-control'}}) }}
                    </div>

                    <div class="clearfix m-b-lg m-t-sm">
                        <button type="submit" class="btn btn-primary pull-left">Register!</button>
                        <a class="btn btn-danger pull-right" href="{{ path('human_list') }}">Cancel</a>
                    </div>


                    {{ form_end(form) }}

                </div>

            </div>
        </div>
    </div>
{% endblock %}