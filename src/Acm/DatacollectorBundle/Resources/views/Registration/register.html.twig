{% extends 'base.html.twig' %}
{% block body %}
    <div class="login">
        <div class="container">
            <div class="row">
                <div class="col-sm-1 center-block">
                    <img src="{{ asset('images/logo-icon.png') }}" class="img-responsive"/>
                </div>

                <div class="col-sm-6 col-md-4 center-block  m-t-lg">
                    <div class="help-lead">
                        <h3>Add new user</h3>
                        <h4>Add a new user from here to access your application</h4>
                    </div>
                    {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.plainPassword.first) }}
                    {{ form_row(form.plainPassword.second) }}

                    <button type="submit">Register!</button>
                    {{ form_end(form) }}

                </div>

            </div>
        </div>
    </div>
{% endblock %}